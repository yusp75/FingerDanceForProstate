<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting_music"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:columnCount="2"
    android:padding="20dp"
    android:rowCount="6"
    tools:context="com.yushealth.prostate.fingerdanceforprostate.SettingMusicActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:text="Setting for background music" />

    <Switch
        android:id="@+id/music_is_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:text="Music on" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select file" />

    <TextView
        android:id="@+id/tvMusicfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:onClick="selMusicClick"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:id="@+id/btnApply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnApplyClick"
        android:text="Apply"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnCancelClick"
        android:text="Cancel"
        style="@style/Widget.AppCompat.Button.Colored" />

</GridLayout>
